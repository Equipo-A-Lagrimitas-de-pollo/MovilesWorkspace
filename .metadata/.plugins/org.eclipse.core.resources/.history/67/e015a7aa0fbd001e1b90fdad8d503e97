package com.moviles.filter;

import java.util.List;
import com.moviles.model.entity.Movil;
import com.moviles.util.Intervalo;

public class FilterByPrecio extends DecoratorFilter<List<Movil>,Intervalo> {

	public FilterByPrecio(DecoratorFilter<List<Movil>, ?> decoratorFilter, Intervalo parameter) {
		super(decoratorFilter, parameter);
	}

	@Override
	public List<Movil> filter(List<Movil> toFilter) {
		List<Movil> filtered = toFilter.stream()
				.filter(item->item.getPrecio()>parameter.getMin()&&item.getPrecio()<parameter.getMax())
				.toList();
		if(decoratorFilter!=null) {
			return (List<Movil>) decoratorFilter.filter(filtered);
		}
		return filtered;
	}



}
